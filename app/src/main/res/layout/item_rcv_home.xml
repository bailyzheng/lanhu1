<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_home_head"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"

            android:src="@mipmap/icon_head_normal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_home_head"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/iv_home_choose"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_home_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="--"
                    android:lines="1"
                    android:maxLength="13"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/iv_home_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_vip"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/iv_home_zhiding"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:visibility="gone"
                    android:src="@mipmap/ic_ding"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"/>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_home_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/choose"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/app_margin_right"/>
        <TextView
            android:id="@+id/tv_home_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:text="已添加"/>

    </RelativeLayout>


</RelativeLayout>