<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/icon_head_normal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_head"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/tv_addgroup"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="宝妈微商求带"
                android:lines="1"
                android:maxLength="13"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_vip"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/iv_zhiding"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/ic_ding"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:text="在家没事干求好上家"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_addgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+加人"
        android:textColor="@color/white"
        android:background="@drawable/tv_main_color_bg"
        android:padding="5dp"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>




</RelativeLayout>