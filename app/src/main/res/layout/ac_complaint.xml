<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg_color"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/index_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_color"
        android:minHeight="?attr/actionBarSize"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="投诉"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="15sp"
        android:layout_margin="15dp"
        android:text="请选择投诉原因"/>

    <RelativeLayout
        android:id="@+id/rl_qz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        >
        <TextView
            android:id="@+id/tv_qz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欺诈"
            android:textColor="@color/main_color"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>
        <CheckBox
            android:id="@+id/cb_qz"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:enabled="false"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/cb_agree_bg_selector"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_sq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        >
        <TextView
            android:id="@+id/tv_sq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="色情"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>
        <CheckBox
            android:id="@+id/cb_sq"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:enabled="false"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:background="@drawable/cb_agree_bg_selector"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_zzyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        >
        <TextView
            android:id="@+id/tv_zzyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="政治谣言"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>
        <CheckBox
            android:id="@+id/cb_zzyy"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:enabled="false"
            android:button="@null"
            android:background="@drawable/cb_agree_bg_selector"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_csxyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        >
        <TextView
            android:id="@+id/tv_csxyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常识性谣言"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>
        <CheckBox
            android:id="@+id/cb_csxyy"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:enabled="false"
            android:button="@null"
            android:background="@drawable/cb_agree_bg_selector"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:maxLength="200"
        android:background="@drawable/et_tsms_bg"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:gravity="top"
        android:padding="5dp"
        android:hint="请输入200字以内的描述，我们将优先处理较详细的举报反馈！"
        android:layout_marginLeft="15dp"
        />


    <ImageView
        android:id="@+id/iv_cpic"
        android:layout_width="85dp"
        android:layout_height="105dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/add_pic"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_bg_round_dark"
        android:textColor="@color/white"
        android:text="提交"
        android:layout_margin="20dp"/>
</LinearLayout>
    </ScrollView>
</LinearLayout>