<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/index_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_color"
        android:minHeight="?attr/actionBarSize"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="开通VIP"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                >
                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/icon_head_normal"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_toRightOf="@id/iv_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:text=" "
                    />

                <TextView
                    android:id="@+id/tv_lasttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#C39851"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text=" "
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF4300"
                    android:text="VIP会员"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_vipclub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" VIP特权 "
                    android:textColor="@color/white"
                    android:background="@drawable/tv_viptq_bg"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_1"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:weightSum="3">
                <RelativeLayout
                    android:id="@+id/rl_v1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:padding="2dp"
                    android:background="@color/buy_vip_n"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_time1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1个月"
                        android:gravity="center"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:background="@color/white"
                        android:textColor="@color/red"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:id="@+id/tv_lhmoney1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20狐币"
                        android:layout_below="@+id/tv_time1"
                        android:gravity="center"
                        android:background="#EEEEEE"
                        android:textColor="#969696"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_v2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="2dp"
                    android:background="@color/buy_vip_n"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_time2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2个月"
                        android:gravity="center"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:background="@color/white"
                        android:textColor="@color/red"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:id="@+id/tv_lhmoney2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="40狐币"
                        android:layout_below="@+id/tv_time2"
                        android:gravity="center"
                        android:background="#EEEEEE"
                        android:textColor="#969696"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_v3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:padding="2dp"
                    android:background="@color/buy_vip_n"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_time3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3个月"
                        android:gravity="center"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:background="@color/white"
                        android:textColor="@color/red"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:id="@+id/tv_lhmoney3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="60狐币"
                        android:layout_below="@+id/tv_time3"
                        android:gravity="center"
                        android:background="#EEEEEE"
                        android:textColor="#969696"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        />

                </RelativeLayout>




            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_1"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:weightSum="3">
                <RelativeLayout
                    android:id="@+id/rl_v4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:padding="2dp"
                    android:background="@color/buy_vip_n"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_time4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6个月"
                        android:gravity="center"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:background="@color/white"
                        android:textColor="@color/red"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:id="@+id/tv_lhmoney4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="120狐币"
                        android:layout_below="@+id/tv_time4"
                        android:gravity="center"
                        android:background="#EEEEEE"
                        android:textColor="#969696"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_v5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="2dp"
                    android:background="@color/buy_vip_n"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_time5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9个月"
                        android:gravity="center"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:background="@color/white"
                        android:textColor="@color/red"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:id="@+id/tv_lhmoney5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="180狐币"
                        android:layout_below="@+id/tv_time5"
                        android:gravity="center"
                        android:background="#EEEEEE"
                        android:textColor="#969696"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_v6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:padding="2dp"
                    android:background="@color/buy_vip_n"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_time6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12个月"
                        android:gravity="center"
                        android:paddingTop="30dp"
                        android:paddingBottom="30dp"
                        android:background="@color/white"
                        android:textColor="@color/red"
                        android:textSize="17sp"
                        />
                    <TextView
                        android:id="@+id/tv_lhmoney6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="240狐币"
                        android:layout_below="@+id/tv_time6"
                        android:gravity="center"
                        android:background="#EEEEEE"
                        android:textColor="#969696"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户余额:"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    />

                <TextView
                    android:id="@+id/tv_have"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0狐币"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需支付:"
                    android:layout_marginLeft="30dp"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    />

                <TextView
                    android:id="@+id/tv_needpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0狐币"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/btn_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_bg_round_dark"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="立即开通"
                android:layout_margin="20dp"/>
        </LinearLayout>
    </ScrollView>







</LinearLayout>